<p id="notice"><%= notice %></p>

<div class="row panel panel-default">
<table id="monitor-stations-table" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid">
  <thead>
    <tr>
      <th>社区</th>
      <th>站号</th>
      <th>站名</th>
      <th>类型</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @monitor_stations.each do |station| %>
      <tr>
        <td><%= station.community.district if station.community.present? %></td>
        <td><%= station.station_number %></td>
        <td><%= station.station_name %></td>
        <td><%= station.station_type %></td>
        <td>
          <%= link_to 'Show',
                                admin_monitor_station_path(station),
                                :class => "btn btn-xs btn-info" %>
          <%= link_to 'Edit',
                                edit_admin_monitor_station_path(station),
                                :class => "btn btn-xs btn-primary" %>
          <%= link_to 'Destroy',
                                admin_monitor_station_path(station),
                                method: :delete,
                                data: { confirm: 'Are you sure?' },
                                :class => 'btn btn-xs btn-danger'
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '添加监测站点', new_admin_monitor_station_path %>
</div>
<% content_for :scripts do %>
  <script type="text/javascript">
    $('#monitor-stations-table').dataTable({
      bAutoWidth: false
    });
  </script>
<% end %>
